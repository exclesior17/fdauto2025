<script>
let autoData = [];

function loadData() {
    const saved = localStorage.getItem("autoData");
    if (saved) {
        autoData = JSON.parse(saved);
    } else {
        autoData = [
            { marca: "Fiat", modello: "500", anno: 2020, km: 15000, prezzo: 12500, img: "https://images.unsplash.com/photo-1600185361997-13e19e0c1bb5?auto=format&fit=crop&w=800&q=80" },
            { marca: "Volkswagen", modello: "Golf", anno: 2019, km: 25000, prezzo: 18000, img: "https://images.unsplash.com/photo-1571607386500-0f918c1e48f3?auto=format&fit=crop&w=800&q=80" },
            { marca: "BMW", modello: "X1", anno: 2021, km: 10000, prezzo: 32000, img: "https://images.unsplash.com/photo-1592194996308-7b43878e84a6?auto=format&fit=crop&w=800&q=80" }
        ];
    }
}

function saveData() {
    localStorage.setItem("autoData", JSON.stringify(autoData));
}

const autoGrid = document.getElementById("autoGrid");
const searchInput = document.getElementById("searchInput");
const autoForm = document.getElementById("autoForm");
const marcaInput = document.getElementById("marca");
const modelloInput = document.getElementById("modello");
const annoInput = document.getElementById("anno");
const kmInput = document.getElementById("km");
const prezzoInput = document.getElementById("prezzo");
const imgInput = document.getElementById("img");
const autoIndexInput = document.getElementById("autoIndex");

function renderAuto(filter = "") {
    autoGrid.innerHTML = "";
    const filtered = autoData.filter(auto =>
        `${auto.marca} ${auto.modello}`.toLowerCase().includes(filter.toLowerCase())
    );

    if (filtered.length === 0) {
        autoGrid.innerHTML = "<p style='text-align:center;'>Nessuna auto trovata.</p>";
        return;
    }

    filtered.forEach((auto, index) => {
        const card = document.createElement("div");
        card.className = "auto-card";
        card.innerHTML = `
            <img src="${auto.img}" alt="${auto.marca} ${auto.modello}">
            <div class="info">
                <h3>${auto.marca} ${auto.modello}</h3>
                <p>Anno: ${auto.anno}</p>
                <p>Chilometraggio: ${auto.km.toLocaleString()} km</p>
                <p>Prezzo: €${auto.prezzo.toLocaleString()}</p>
                <button onclick="richiediInfo(${index})">Richiedi info</button>
                <button class="edit" onclick="editAuto(${index})">Modifica</button>
                <button class="delete" onclick="deleteAuto(${index})">Elimina</button>
            </div>
        `;
        autoGrid.appendChild(card);
    });
}

function richiediInfo(index) {
    const auto = autoData[index];
    alert(`Hai richiesto informazioni per:\n${auto.marca} ${auto.modello}\nPrezzo: €${auto.prezzo.toLocaleString()}`);
}

function editAuto(index) {
    const auto = autoData[index];
    marcaInput.value = auto.marca;
    modelloInput.value = auto.modello;
    annoInput.value = auto.anno;
    kmInput.value = auto.km;
    prezzoInput.value = auto.prezzo;
    imgInput.value = auto.img;
    autoIndexInput.value = index;
}

function deleteAuto(index) {
    if (confirm("Sei sicuro di voler eliminare questa auto?")) {
        autoData.splice(index, 1);
        saveData();
        renderAuto(searchInput.value);
    }
}

autoForm.addEventListener("submit", function(e) {
    e.preventDefault();
    const auto = {
        marca: marcaInput.value,
        modello: modelloInput.value,
        anno: parseInt(annoInput.value),
        km: parseInt(kmInput.value),
        prezzo: parseInt(prezzoInput.value),
        img: imgInput.value
    };
    const index = autoIndexInput.value;
    if (index === "") {
        autoData.push(auto);
    } else {
        autoData[index] = auto;
        autoIndexInput.value = "";
    }
    autoForm.reset();
    saveData();
    renderAuto(searchInput.value);
});

document.getElementById("contactForm").addEventListener("submit", function(e) {
    e.preventDefault();
    alert("Messaggio inviato! Ti risponderemo al più presto.");
    this.reset();
});

searchInput.addEventListener("input", () => {
    renderAuto(searchInput.value);
});

window.onload = function() {
    loadData();
    renderAuto();
};
</script>

</body>
